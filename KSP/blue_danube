			//		bar (fz)
note("D3",3),
note("E3",3),
note("F#3",1),
note("R",0.5),
note("F#3",0.5),
note("F#3",1),
		//					NEW PHRASE
note("F#3",1)
	)
).


rh1:play(
	list(
		// PHRASE 1
		note("D4",1),
				//		bar 1
		note("D4",1),
		note("F#4",1),
		note("A4",1),
		note("A4",7),
		note("R",1),
		note("D4",1),
				//		bar 5
		note("D4",1),
		note("F#4",1),
		note("A4",1),
		note("A4",7),
		note("R",1),
		note("C#4",1),
				//		bar 9 (2nd set of bars)
		note("C#4",1),
		note("E4",1),
		note("B4",1),
		note("B4",7),
		note("R",1),
		note("C#4",1),
				// 		bar 13
		note("C#4",1),
		note("E4",1),
		note("B4",1),
		note("B4",6),
		note("A4",1),
		note("R",1),
		note("D4",1),
			//		bar 17 (end of 2nd set)
		note("D4",1),
		note("F#4",1),
		note("A4",1),
		note("D5",7),
		note("R",1),
		note("D4",1),
			//		bar 21
		note("D4",1),
		note("F#4",1),
		note("A4",1),
		note("D5",7),
		note("R",1),
		note("E4",1),
			//		bar 25 (end of 3rd set)
		note("E4",1),
		note("G4",1),
		note("B4",1),
		note("B4",4),
		note("G#4",1),
		note("A4",1),
		note("F#5",4),
		note("D5",1),
		note("F#5",1),
			//		bar (fz)
		note("B4",3),
		note("C#5",3),
		note("D5",1),
		note("R",0.5),
		note("F#4",0.5),
		note("F#4",1),
		//					NEW PHRASE
		note("F#4",1)
	)
).

rh2:play(
